{
  "rules": {
    ".read": true,
    ".write": false,

    "dot": {
      // Make sure clients can't interrupt others' drags.
      // This relies on clients being well-behaved when setting client: ''.
      ".write": "data.child('client').val() === '' || newData.child('client').val() === '' || data.child('client').val() === newData.child('client').val()",
      ".validate": "newData.hasChildren(['client', 'position'])",

      "client": {
        ".validate": "newData.isString()"
      },

      "position": {
        ".validate": "newData.hasChildren(['x', 'y'])",

        "x": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 100"
        },

        "y": {
          ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 100"
        }
      }
    }
  }
}
